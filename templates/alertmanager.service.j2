[Unit]
Description=Prometheus AlertManager
Wants=network-online.target
After=network-online.target

[Service]
User=root
Restart=on-failure
ExecStart=/etc/prometheus/alertmanager-{{ am_version }}.linux-amd64/alertmanager \
        --config.file /etc/prometheus/alertmanager-{{ am_version }}.linux-amd64/alertmanager.yml \
        --cluster.advertise-address 0.0.0.0:9093
[Install]
WantedBy=multi-user.target
